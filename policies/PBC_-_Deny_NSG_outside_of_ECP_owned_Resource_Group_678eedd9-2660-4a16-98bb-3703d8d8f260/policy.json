{
 "properties": {
  "displayName": "PBC - Deny NSG outside of ECP owned Resource Group",
  "policyType": "Custom",
  "mode": "All",
  "description": "This policy blocks an Network Security Group (NSG) from being created outside of an Enterprise Cloud Program (ECP) owned Resource Group.",
  "metadata": {
   "category": "Network",
   "createdBy": "7e36e78a-dcd5-4f42-a351-fdba9c8f2954",
   "createdOn": "2020-11-12T17:07:37.3095254Z",
   "updatedBy": null,
   "updatedOn": null
  },
  "parameters": {},
  "policyRule": {
   "if": {
    "anyOf": [
     {
      "field": "type",
      "equals": "Microsoft.Network/networkSecurityGroups"
     },
     {
      "field": "type",
      "equals": "Microsoft.Network/networkSecurityGroups/securityRules"
     }
    ]
   },
   "then": {
    "effect": "deny"
   }
  }
 },
